/* pages/index/index.wxss */

page{
  height: 100%;
  background-color:#8ED145 ;
}

.indexContainer{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

.userName{
  font-size: 60rpx;
  font-weight: 800;
}

button{
  border-radius: 50rpx;
  background-color: rgb(235, 232, 232);
  width: 150px;
  border: solid 1px rgb(40, 255, 255);
  font-weight: 600;
  font-size: 15px;
}

.txt{
  text-align: center;
  color: white;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 0px;
}
